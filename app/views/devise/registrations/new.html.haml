.error_display
	= render "devise/shared/error_messages", resource: resource
.form_container
	.form_wrapper
		%h2.text-center= t('signup')
		.form_container
			= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true, id: :new_user) do |f|
				= render "devise/shared/error_messages", resource: resource
				.mb-4
					= f.label t("name_on_card"), class: "label"
					= f.text_field :name_on_card, autofocus: true, class: "input_field", id: "name_on_card", required: true
				.mb-4
					= f.label t("email"), class: "label"
					= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_field"
				.mb-4
					= f.label t("card_number"), class: "label", required: true
					#card_number
				.mb-4
					= f.label t("expiry_date"), class: "label", required: true
					#exp_date
				.mb-4
					= f.label t("cvc"), class: "label", required: true
					#cvc

				= f.submit t("pay"), class: "button"