.form_container
	.form_wrapper
		%h2.text-center Become a Subscriber
		.form_container
			= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true, id: :new_user) do |f|
				.mb-4
					= f.label :name_on_card, class: "label"
					= f.text_field :name_on_card, autofocus: true, class: "input_field", id: "name_on_card"
				.mb-4
					= f.label :email, class: "label"
					= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_field"
				.mb-4
					= f.label :card_number, class: "label"
					#card_number
				.mb-4
					= f.label :expiry_date, class: "label"
					#exp_date
				.mb-4
					= f.label :cvc, class: "label"
					#cvc

				= f.submit "Pay for Subscription", class: "button"